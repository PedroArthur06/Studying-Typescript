{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,

    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}